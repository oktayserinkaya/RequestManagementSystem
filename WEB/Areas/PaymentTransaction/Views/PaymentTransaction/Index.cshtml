@model List<WEB.Areas.PaymentTransaction.Models.PaymentTransactionVM.PaymentTransactionListVM>
@{
    ViewData["Title"] = "Ödeme İşlemleri";
    Func<string?, string> safe = s => string.IsNullOrWhiteSpace(s) ? "-" : s!;
}

<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700,900" />
<link href="~/TemplateResources/css/nucleo-icons.css" rel="stylesheet" />
<link href="~/TemplateResources/css/nucleo-svg.css" rel="stylesheet" />
<script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />
<link id="pagestyle" href="~/TemplateResources/css/material-dashboard.css?v=3.2.0" rel="stylesheet" />

<div class="container-fluid py-2">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Ödeme Birimi | Ödeme Bekleyen Talepler</h6>
                    </div>
                </div>

                <div class="card-body px-0 pb-2">
                    @if (TempData["Success"] is string s && !string.IsNullOrWhiteSpace(s))
                    {
                        <div class="alert alert-success mx-3 mt-3">@s</div>
                    }
                    @if (TempData["Error"] is string e && !string.IsNullOrWhiteSpace(e))
                    {
                        <div class="alert alert-danger mx-3 mt-3">@e</div>
                    }

                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Talep Oluşturan
                                    </th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                        Departman/Birim
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Durum
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Talep Tarihi
                                    </th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                        Ürün
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Adet
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Şartname
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        İşlem
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model == null || !Model.Any())
                                {
                                    <tr>
                                        <td colspan="8" class="text-center text-secondary py-4">Ödeme bekleyen talep bulunamadı.</td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var r in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex px-2 py-1">
                                                    <div class="d-flex flex-column justify-content-center">
                                                        <h6 class="mb-0 text-sm">@safe(r.EmployeeFullName)</h6>
                                                        <p class="text-xs text-secondary mb-0">@safe(r.EmployeeEmail)</p>
                                                    </div>
                                                </div>
                                            </td>

                                            <td>
                                                <p class="text-xs font-weight-bold mb-0">@safe(r.DepartmentName)</p>
                                                <p class="text-xs text-secondary mb-0">—</p>
                                            </td>

                                            <td class="align-middle text-center text-sm">
                                                <span class="badge badge-sm bg-gradient-warning">ÖDEME BEKLİYOR</span>
                                            </td>

                                            <td class="align-middle text-center">
                                                <span class="text-secondary text-xs font-weight-bold">
                                                    @( (r.RequestDate ?? r.CreatedDate).ToString("dd.MM.yyyy") )
                                                </span>
                                            </td>

                                            <td class="align-middle">
                                                <span class="text-xs font-weight-bold">@safe(r.ProductName)</span>
                                            </td>

                                            <td class="align-middle text-center">
                                                <span class="text-secondary text-xs font-weight-bold">@((r.Amount?.ToString() ?? "-"))</span>
                                            </td>

                                            <td class="align-middle text-center">
                                                @if (!string.IsNullOrWhiteSpace(r.SpecPath))
                                                {
                                                    <a class="text-secondary font-weight-bold text-xs"
                                                       asp-area="PaymentTransaction"
                                                       asp-controller="PaymentTransaction"
                                                       asp-action="Spec"
                                                       asp-route-id="@r.Id"
                                                       target="_blank" rel="noopener">
                                                        Görüntüle
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-secondary text-xs">Yok</span>
                                                }
                                            </td>

                                            <td class="align-middle text-center">
                                                <a class="text-secondary font-weight-bold text-xs"
                                                   asp-area="PaymentTransaction"
                                                   asp-controller="PaymentTransaction"
                                                   asp-action="Pay"
                                                   asp-route-id="@r.Id">
                                                    Ödeme Yap
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card-footer">
                    <a asp-area="Request" asp-controller="Requests" asp-action="Index" class="btn btn-outline-dark d-block">
                        Taleplere Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/TemplateResources/js/core/popper.min.js"></script>
<script src="~/TemplateResources/js/core/bootstrap.min.js"></script>
<script src="~/TemplateResources/js/plugins/perfect-scrollbar.min.js"></script>
<script src="~/TemplateResources/js/plugins/smooth-scrollbar.min.js"></script>
<script>
    var win = navigator.platform.indexOf('Win') > -1;
    if (win && document.querySelector('#sidenav-scrollbar')) {
      var options = { damping: '0.5' }
      Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
    }
</script>
<script async defer src="https://buttons.github.io/buttons.js"></script>
<script src="~/TemplateResources/js/material-dashboard.min.js?v=3.2.0"></script>
