@model IEnumerable<WEB.Areas.PaymentTransaction.Models.PaymentTransactionVM.PaymentTransactionListVM>

<div class="container-fluid py-4">
    <div class="card">
        <div class="card-header bg-gradient-dark text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="mb-0">Onaylanan Talepler</h6>
                <form method="get" class="d-flex gap-2">
                    <input name="q" class="form-control form-control-sm" placeholder="Ad/Email/Departman ara..." />
                    <button class="btn btn-sm btn-light" type="submit">Ara</button>
                </form>
            </div>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Talep Tarihi</th>
                        <th>Personel</th>
                        <th>Departman</th>
                        <th>Kategori</th>
                        <th>Alt Kategori</th>
                        <th>Ürün</th>
                        <th>Adet</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>@(i.RequestDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                            <td>
                                <div>@i.EmployeeFullName</div>
                                <div class="text-muted small">@i.EmployeeEmail</div>
                            </td>
                            <td>@i.DepartmentName</td>
                            <td>@i.CategoryName</td>
                            <td>@i.SubCategoryName</td>
                            <td>@i.ProductName</td>
                            <td>@(i.Amount?.ToString() ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
