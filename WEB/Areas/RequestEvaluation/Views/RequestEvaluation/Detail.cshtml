@model WEB.Areas.RequestEvaluation.Models.RequestEvaluationVM.RequestEvaluationDetailFormVM
@{
    ViewData["Title"] = "Talep Detayı";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700,900" />
<link href="~/TemplateResources/css/nucleo-icons.css" rel="stylesheet" />
<link href="~/TemplateResources/css/nucleo-svg.css" rel="stylesheet" />
<script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />
<link id="pagestyle" href="~/TemplateResources/css/material-dashboard.css?v=3.2.0" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3">
            <h6 class="text-white text-capitalize ps-3">Satın Alma Talebi (Detay)</h6>
        </div>

        <div class="card-body">

            <div class="row g-4">
                <div class="col-md-4">
                    <label class="form-label fw-bold">Talep Tarihi</label>
                    <input class="form-control border border-dark shadow-sm"
                           value="@(Model.RequestDate?.ToString("dd.MM.yyyy") ?? Model.CreatedDate.ToString("dd.MM.yyyy"))"
                           readonly />
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">Talep Eden Personel</label>
                    <input class="form-control border border-dark shadow-sm" value="@Model.FullName" readonly />
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">Departman/Birim</label>
                    <input class="form-control border border-dark shadow-sm" value="@Model.DepartmentName" readonly />
                </div>
            </div>

            <br />

            <div class="row g-4">
                <div class="col-md-4">
                    <label class="form-label">Kategori</label>
                    <input class="form-control border border-dark shadow-sm" value="@Model.CategoryName" readonly />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Alt Kategori</label>
                    <input class="form-control border border-dark shadow-sm" value="@Model.SubCategoryName" readonly />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Ürün</label>
                    <input class="form-control border border-dark shadow-sm" value="@Model.ProductName" readonly />
                </div>
            </div>

            <br />

            <div class="row g-4">
                <div class="col-md-12">
                    <label class="form-label fw-bold">Listede Olmayan Ürün</label>
                    <input class="form-control border border-dark shadow-sm" value="@(Model.SpecialProductName ?? "-")" readonly />
                </div>

                <div class="col-md-12">
                    <label class="form-label fw-bold">Adet</label>
                    <input class="form-control border border-dark shadow-sm"
                           value="@(Model.Amount?.ToString() ?? "-")" readonly />
                </div>

                <div class="col-md-12">
                    <label class="form-label fw-bold">Açıklama</label>
                    <textarea class="form-control border border-dark shadow-sm" rows="4" readonly>@(Model.Description ?? "")</textarea>
                </div>

                <div class="col-md-12">
                    <label class="form-label fw-bold">Yüklenen Şartname (PDF)</label>
                    @if (!string.IsNullOrEmpty(Model.ExistingProductFeaturesFilePath))
                    {
                        <div class="input-group">
                            <input class="form-control border border-dark shadow-sm"
                                   value="@Model.ExistingProductFeaturesFilePath" readonly />
                            <a class="btn btn-outline-dark"
                               asp-area="RequestEvaluation"
                               asp-controller="RequestEvaluation"
                               asp-action="Spec"
                               asp-route-id="@Model.Id"
                               target="_blank" rel="noopener noreferrer">
                                Görüntüle
                            </a>
                        </div>
                        <div class="form-text">Dosyayı görüntülemek için bağlantıyı kullanın.</div>
                    }
                    else
                    {
                        <input class="form-control border border-dark shadow-sm" value="Yüklenmiş dosya yok" readonly />
                    }
                </div>
            </div>

            <br />
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <span class="badge @(Model.StatusText switch { "AKTİF" => "bg-success", "GÜNCELLENDİ" => "bg-warning", "PASİF" => "bg-secondary", _ => "bg-secondary" })">
                        @Model.StatusText
                    </span>
                </div>

                <div class="d-flex gap-2">
                    @* Onay / Red sadece Komisyon veya Admin'e görünür *@
                    @if (User.IsInRole("IhtiyacTespitKomisyonu") || User.IsInRole("Admin"))
                    {
                        <form method="post"
                              asp-area="RequestEvaluation"
                              asp-controller="RequestEvaluation"
                              asp-action="Approve"
                              class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-success">Onayla</button>
                        </form>

                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal">
                            Reddet
                        </button>
                    }

                    <a asp-area="RequestEvaluation" asp-controller="RequestEvaluation" asp-action="Index"
                       class="btn btn-outline-secondary">← Listeye Dön</a>
                </div>
            </div>
        </div>
    </div>
</div>

@* Red gerekçesi modal *@
<div class="modal fade" id="rejectModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post"
              asp-area="RequestEvaluation"
              asp-controller="RequestEvaluation"
              asp-action="Reject"
              class="modal-content">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="modal-header">
                <h5 class="modal-title">Red Nedeni</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <textarea name="reason" class="form-control" rows="4" placeholder="Red gerekçesi (opsiyonel)"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Vazgeç</button>
                <button type="submit" class="btn btn-danger">Reddet</button>
            </div>
        </form>
    </div>
</div>
