@* Areas/Admin/Views/Roles/Index.cshtml *@
@using WEB.Areas.Admin.Models.RoleVM
@model List<GetRoleVM>

@{
	ViewData["Title"] = "Roller";
}

<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700,900" />
<!-- Nucleo Icons -->
<link href="~/TemplateResources/css/nucleo-icons.css" rel="stylesheet" />
<link href="~/TemplateResources/css/nucleo-svg.css" rel="stylesheet" />
<!-- Font Awesome Icons -->
<script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
<!-- Material Icons -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />
<!-- CSS Files -->
<link id="pagestyle" href="~/TemplateResources/css/material-dashboard.css?v=3.2.0" rel="stylesheet" />

<div class="container-fluid py-2">
	<div class="row">
		<div class="col-12">
			<div class="card my-4">
				<div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
					<div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3 d-flex align-items-center justify-content-between">
						<h6 class="text-white text-capitalize ps-3 mb-0">Roller</h6>

						<div class="pe-3">
							<form asp-area="Admin"
								  asp-controller="RoleFix"
								  asp-action="Normalize"
								  method="post"
								  class="d-inline"
								  onsubmit="return confirm('AspNetRoles.NormalizedName değerlerini güncelleyecek. Devam edilsin mi?');">
								@Html.AntiForgeryToken()
								<button type="submit" class="btn btn-sm btn-outline-light">
									Rolleri Normalize Et
								</button>
							</form>
						</div>
					</div>
				</div>

				<div class="card-body px-0 pb-2">
					@* TempData mesajları *@
					@if (TempData["Success"] is string s && !string.IsNullOrWhiteSpace(s))
					{
						<div class="alert alert-success mx-3 my-2">@s</div>
					}
					@if (TempData["Error"] is string e && !string.IsNullOrWhiteSpace(e))
					{
						<div class="alert alert-danger mx-3 my-2">@e</div>
					}

					<div class="table-responsive p-0">
						<table class="table align-items-center mb-0">
							<thead>
								<tr>
									<th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
										Rol
									</th>
									<th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
										Durum
									</th>
									<th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
										Eklenme Tarihi
									</th>
									<th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
										Güncellenme Tarihi
									</th>
									<th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
										Role Ata
									</th>
									<th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
										Güncelle
									</th>
									<th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
										Sil
									</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var role in Model)
								{
									var statusText = role.Status?.ToString() ?? "-";
									var statusClass = "bg-gradient-secondary";
									if (string.Equals(statusText, "Active", StringComparison.OrdinalIgnoreCase))
									{
										statusClass = "bg-gradient-success";
									}
									else if (string.Equals(statusText, "Modified", StringComparison.OrdinalIgnoreCase))
									{
										statusClass = "bg-gradient-warning";
									}
									else if (string.Equals(statusText, "Passive", StringComparison.OrdinalIgnoreCase))
									{
										statusClass = "bg-gradient-danger";
									}

								<tr>
									<td>
										<div class="d-flex px-2 py-1">
											<div class="d-flex flex-column justify-content-center">
												<h6 class="mb-0 text-sm">@role.Name</h6>
											</div>
										</div>
									</td>

									<td class="align-middle text-center">
										<span class="badge badge-sm @statusClass">@role.Status</span>
									</td>

									<td class="align-middle text-center">
										<span class="text-secondary text-xs font-weight-bold">
											@role.CreatedDate.ToString("dd.MM.yyyy HH:mm")
										</span>
									</td>

									<td class="align-middle text-center">
										<span class="text-secondary text-xs font-weight-bold">
											@(role.UpdatedDate.HasValue
																						? role.UpdatedDate.Value.ToString("dd.MM.yyyy HH:mm")
																						: "-")
										</span>
									</td>

										<td class="align-middle">
											<a class="btn btn-secondary font-weight-bold text-xs"
											   data-toggle="tooltip"
											   data-original-title="Assign role"
											   asp-action="AssignToRole" asp-route-id="@role.Id">
												<span class="material-symbols-rounded">add_moderator</span>  Role Ata
											</a>
										</td>

										<td class="align-middle">
											<a class="btn btn-success font-weight-bold text-xs"
											   data-toggle="tooltip"
											   data-original-title="Edit role"
											   asp-action="UpdateRole" asp-route-id="@role.Id">
												<span class="material-symbols-rounded">stylus_note</span>  Güncelle
											</a>
										</td>

										<td class="align-middle text-center">
											<a class="btn btn-danger font-weight-bold text-xs"
											   data-toggle="tooltip"
											   data-original-title="Delete role"
											   asp-action="DeleteRole" asp-route-id="@role.Id"
											   onclick="return confirm('Bu rolü silmek istediğinize emin misiniz?');">
												<span class="material-symbols-rounded">delete</span>  Sil
											</a>
										</td>
									</tr>
																}
							</tbody>
						</table>
					</div>
				</div>

				<div class="card-footer">
					<a asp-action="CreateRole" class="btn btn-outline-dark d-block">Yeni Rol Ekle</a>
				</div>
			</div>
		</div>
	</div>
</div>

<script src="~/TemplateResources/js/core/popper.min.js"></script>
<script src="~/TemplateResources/js/core/bootstrap.min.js"></script>
<script src="~/TemplateResources/js/plugins/perfect-scrollbar.min.js"></script>
<script src="~/TemplateResources/js/plugins/smooth-scrollbar.min.js"></script>
<script>
	var win = navigator.platform.indexOf('Win') > -1;
	if (win && document.querySelector('#sidenav-scrollbar')) {
		var options = { damping: '0.5' };
		Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
	}
</script>
<script async defer src="https://buttons.github.io/buttons.js"></script>
<script src="~/TemplateResources/js/material-dashboard.min.js?v=3.2.0"></script>
