@using WEB.Models.ViewModels.AccountVM
@{
    ViewData["Title"] = "CreatePassword";
}
@model ResetPasswordVM

<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Şifre Oluştur!</h1>
                                </div>
                                <form class="user" asp-action="CreatePassword">
                                    <input type="hidden" asp-for="Token" />
                                    <input type="hidden" asp-for="Email" />
                                    <div class="form-group">
                                        <input asp-for="NewPassword" type="password" class="form-control form-control-user"
                                               id="exampleInputPassword" placeholder="Yeni şifrenizi giriniz...">
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="CheckNewPassword" type="password" class="form-control form-control-user"
                                               id="exampleInputPassword" placeholder="Yeni şifrenizi tekrar giriniz...">
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        Kaydet
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>