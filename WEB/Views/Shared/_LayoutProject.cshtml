												<h6 class="text-sm font-weight-normal mb-1">
													<span class="font-weight-bold">Taleplerim</span>
												</h6>
											</div>
										</div>
									</a>
								</li>
							</ul>
						</li>
						<li class="nav-item pe-2 d-flex align-items-center">
							<a href="javascript:;" class="nav-link text-body p-0">
								<i class="material-symbols-rounded fixed-plugin-button-nav">help</i>
							</a>
						</li>
						<li class="nav-item pe-2 d-flex align-items-center">
							<a href="javascript:;" class="nav-link text-body p-0">
								<i class="material-symbols-rounded fixed-plugin-button-nav">power_settings_circle</i>
							</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>

		<div class="container-fluid py-2">
			<div class="row">
				@RenderBody()
			</div>
